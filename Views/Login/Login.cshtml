@using MyDevLab.ViewModels
@model LoginVM
@*@{
        Layout = "_LoginLayout";
    }*@

<link href="~/css/login.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-shadow-animation/jquery.animate-shadow-min.js"></script>
<script src="~/js/login.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href="~/css/loginForm.css" rel="stylesheet" />
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@*//TODO add as bundle*@
<div id="shadow-wrapper">
</div>
<div id="loginForm-wrapper" class="inner-shadow">

    <div class="wrapper">
        <div class="container">
            <h1>Welcome</h1>
            <form id="account" method="post" asp-controller="Login" asp-action="LogIn">
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                @Html.ValidationMessage("LoginError")

            </form>

            <ul class="bg-bubbles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>


    </div>
</div>

